<%= content_tag :div, class: 'media' do %>
  <div class="media-body">
    <p><%= link_to "", item, method: :delete, class: 'glyphicon glyphicon-ok' %> <%= item.name %>
    <small>
      created <%= time_ago_in_words(item.created_at) %> ago. <%= link_to " ", edit_item_path(item), class: 'glyphicon glyphicon-pencil' %> <%= link_to " ", item, method: :delete, class: 'glyphicon glyphicon-remove', data: { confirm: 'Are you sure you want to delete this post?' } %>
    </small></p>
  </div>
<% end %>
