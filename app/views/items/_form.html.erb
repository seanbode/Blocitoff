<h4>Add a new item</h4>
<%= form_for [item] do |f| %>
  <div class="form-group">
    <%= f.label :name, class: 'sr-only' %>
    <%= f.text_field :name, class: 'form-control', placeholder: "Enter a new item name" %>
  </div>
  <%= f.submit "Submit Item Name", class: 'btn btn-default pull-right' %>
<% end %>
